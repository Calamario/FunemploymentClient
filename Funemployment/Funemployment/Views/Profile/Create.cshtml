@model Funemployment.Models.Player
<head>
	<link type="text/css" href="~/styles/create_player.css" rel="stylesheet" />
</head>
<body>
	<main>
		<h1 id="create_title"><span id="blue_letter">F</span>unemployment</h1>
		<p>Welcome, newbie. Just got fired, huh? Create a new profile to join.</p>
		<form id="create_form" method="post" asp-controller="Profile" form-action="Create">
			<div class="form-group">
				@*<label asp-for="Username">Username</label>*@
				<input class="create_input" placeholder="Username" asp-for="Username" />
				@*<label asp-for="Location">Where are you Located</label>*@
				<input class="create_input" placeholder="Enter your location, i.e. Seattle, WA" asp-for="Location" />
				@*<label asp-for="About">Tell Us About you</label>*@
				<input class="create_input" placeholder="Favorite quote" asp-for="About"></input>

				<button type="submit">Submit</button>
			</div>
		</form>
		<footer>
			<p>Contribute to the community, hone your skills, get points, win.</p>
			<p>Then have a sandwich. You earned it.</p>
		</footer>
	</main>
</body>
